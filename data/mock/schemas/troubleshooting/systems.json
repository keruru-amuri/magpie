{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Systems",
  "description": "Schema for aircraft systems",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "name",
      "description"
    ],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the system"
      },
      "name": {
        "type": "string",
        "description": "Name of the system"
      },
      "description": {
        "type": "string",
        "description": "Description of the system"
      }
    }
  }
}